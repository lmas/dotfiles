
# Local services

Host bifrost
        PubkeyAuthentication yes
        Hostname 10.0.0.1
        Port 8022
        User lmas
        IdentityFile ~/.ssh/bifrost

# External services

Host github.com
        PubkeyAuthentication yes
        Hostname github.com
        Port 22
        User git
        IdentityFile ~/.ssh/github

# Prevent leaking any keys/ids/other info
Host *
        PubkeyAuthentication no
        IdentitiesOnly yes

