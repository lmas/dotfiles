
# Local services

Host bifrost
        PubkeyAuthentication yes
        Hostname 192.168.1.20
        Port 8022
        User lmas
        IdentityFile ~/.ssh/bifrost

Host homebox
        PubkeyAuthentication yes
        Hostname 192.168.1.2
        Port 8822
        User lmas
        IdentityFile ~/.ssh/homebox

Host tvbox
        PubKeyAuthentication yes
        Hostname 192.168.1.204
        Port 8822
        User lmas
        IdentityFile ~/.ssh/tvbox

Host pibox
        PubkeyAuthentication yes
        Hostname 192.168.1.3
        Port 8822
        User lmas
        IdentityFile ~/.ssh/pibox

# External services

Host github.com
        PubkeyAuthentication yes
        Hostname github.com
        Port 22
        User git
        IdentityFile ~/.ssh/github

# Prevent leaking any keys/ids/other info
Host *
        PubkeyAuthentication no
        IdentitiesOnly yes

